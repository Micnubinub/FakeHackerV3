<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Switch
            android:id="@+id/flash"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:text="Flash Light"
            android:textColor="#555555"
            android:textSize="18sp" />

        <Switch
            android:id="@+id/wifi"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:enabled="false"
            android:padding="12dp"
            android:text="Wifi"
            android:textColor="#555555"
            android:textSize="18sp" />

        <Switch
            android:id="@+id/bluetooth"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:text="Bluetooth"
            android:textColor="#555555"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/take_pic_back"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:text="Take picture (back)"
            android:textColor="#555555"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/take_pic_front"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:text="Take picture (front | selfie)"
            android:textColor="#555555"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/previous"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:text="Previous Track"
            android:textColor="#555555"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/play_pause"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:text="Play/Pause"
            android:textColor="#555555"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/next"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:text="Next track"
            android:textColor="#555555"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/auto_brightness"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:text="Set brightness Auto"
            android:textColor="#555555"
            android:textSize="18sp" />


        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="12dp"
            android:text="Set Brightness:"
            android:textColor="#555555"
            android:textSize="18sp" />

        <SeekBar
            android:id="@+id/brightness"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="12dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="12dp"
            android:text="Set Volume Alarm:"
            android:textColor="#555555"
            android:textSize="18sp" />

        <SeekBar
            android:id="@+id/volume_alarm"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="12dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="12dp"
            android:text="Set Volume Notification:"
            android:textColor="#555555"
            android:textSize="18sp" />

        <SeekBar
            android:id="@+id/volume_notification"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="12dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="12dp"
            android:text="Set Volume Media:"
            android:textColor="#555555"
            android:textSize="18sp" />

        <SeekBar
            android:id="@+id/volume_media"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="12dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="12dp"
            android:text="Set Volume Ringer:"
            android:textColor="#555555"
            android:textSize="18sp" />

        <SeekBar
            android:id="@+id/volume_ringer"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="12dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="12dp"
            android:text="Set Volume All:"
            android:textColor="#555555"
            android:textSize="18sp" />

        <SeekBar
            android:id="@+id/volume_all"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="12dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp" />


    </LinearLayout>
</ScrollView>